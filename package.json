{
  "name": "probot-addons-assistant",
  "version": "1.0.0",
  "description": "",
  "author": "Franck Nijhof <frenck@addons.community> (https://addons.community)",
  "license": "ISC",
  "repository": "https://github.com/hassio-addons/probot-addons-assistant.git",
  "scripts": {
    "dev": "nodemon --exec \"npm start-probot\"",
    "start-probot": "probot run ./index.js",
    "start": "PRIVATE_KEY=$(echo $PRIVATE_KEY | base64 -d) probot run ./index.js",
    "lint": "standard --fix"
  },
  "dependencies": {
    "first-timers-bot": "hoodiehq/first-timers-bot",
    "js-yaml": "^3.11.0",
    "probot": "^6.0.0",
    "probot-config": "^0.1.0",
    "wip-bot": "^2.4.1"
  },
  "devDependencies": {
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.1",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "now": {
    "alias": "addons-assistant",
    "env": {
      "APP_ID": "@app-id",
      "NODE_ENV": "production",
      "PRIVATE_KEY": "@private-key",
      "WEBHOOK_SECRET": "@webhook-secret"
    }
  }
}
